<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Services</title>
   <style>
    body {
    font-family: Arial, sans-serif;
    background-color: #79826B;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 1200px;
    margin: 20px auto;
    padding: 20px;
    text-align: center;
    background: #E3E3C4;
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

h1 {
    margin-bottom: 20px;
    color: #556043;
}

.success {
    color: #556043;
    font-weight: bold;
}

.services {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.service-card {
    width: 300px;
    padding: 20px;
    background: #f4f4f9;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    text-align: left;
}

.service-card h2 {
    margin-top: 0;
    color: #556043;
}

.service-card p {
    margin: 10px 0;
    color: #556043;
}

form {
    margin-top: 10px;
}

form label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #556043;
}

form input {
    width: 100%;
    padding: 5px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

form button {
    padding: 10px;
    color: white;
    background-color: #556043;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

form button:hover {
    background-color: #556043e7;
}

   </style>
</head>
<body>
    <div class="container">
        <h1>Available Services</h1>

        <!-- Success Message -->
        <% if (query.success) { %>
            <p class="success">Your service request has been submitted successfully!</p>
        <% } %>

        <div class="services">
            <% services.forEach(service => { %>
                <div class="service-card">
                    <h2><%= service.service_name %></h2>
                    <p><%= service.description %></p>
                    <p>Cost: $<%= service.cost %></p>

                    <!-- Service Request Form -->
                    <form action="/services/request" method="POST">
                        <input type="hidden" name="service_id" value="<%= service.service_id %>">
                        
                        <!-- Changed from booking_id to room_id -->
                        <label for="room_id">Room Number:</label>
                        <input type="number" id="room_id" name="room_id" required>
                        
                        <label for="quantity">Quantity:</label>
                        <input type="number" id="quantity" name="quantity" min="1" required>
                        
                        <button type="submit">Request Service</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
