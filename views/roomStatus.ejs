<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Management</title>
    <style>
        body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f8f9fa;
}

h1 {
    text-align: center;
    margin: 20px 0;
}

form {
    margin: 20px auto;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background: white;
    max-width: 400px;
}

form label {
    display: block;
    margin-bottom: 10px;
}

form input, form select, form button {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
}

table {
    width: 90%;
    margin: 20px auto;
    border-collapse: collapse;
    background: white;
}

table th, table td {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: center;
}

button {
    padding: 8px 12px;
    color: white;
    background-color: #556043;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

button:hover {
    background-color: #556043e1;
}
.the {
        margin: 10px 0 50px 20px;
        padding: 4px 8px;
        background-color: #253a03;
        color: white;
        border: none;
        border-radius: 2px;
        cursor: pointer;
      }

    </style>
</head>
<body>
    <h1>Room Management</h1>

    <!-- Form to Add a New Room -->
    <form action="/rooms-update" method="POST" class="add-room-form">
        <h2>Add New Room</h2>
        <label for="room_type">Room Type: 
            <input type="text" id="room_type" name="room_type" required>
        </label>
        <label for="price_per_night">Price Per Night: 
            <input type="number" id="price_per_night" step="0.01" name="price_per_night" required>
        </label>
        <button type="submit">Add Room</button>
    </form>

    <h2>All Rooms</h2>
    <table>
        <thead>
            <tr>
                <th>Room ID</th>
                <th>Room Type</th>
                <th>Room Status</th>
                <th>Price Per Night</th>
                <th>Availability</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% rooms.forEach(room => { %>
            <tr>
                <!-- Update Form -->
                <form action="/rooms-update/<%= room.room_id %>?_method=PUT" method="POST">
                    <td><%= room.room_id %></td>
                    <td>
                        <input type="text" name="room_type" value="<%= room.room_type %>" required>
                    </td>
                    <td>
                        <input type="text" name="room_status" value="<%= room.room_status %>" required>
                    </td>
                    <td>
                        <input type="number" step="0.01" name="price_per_night" value="<%= room.price_per_night %>" required>
                    </td>
                    <td>
                        <select name="availability">
                            <option value="available" <%= room.availability === 'available' ? 'selected' : '' %>>Available</option>
                            <option value="occupied" <%= room.availability === 'occupied' ? 'selected' : '' %>>Occupied</option>
                            <option value="maintenance" <%= room.availability === 'maintenance' ? 'selected' : '' %>>Maintenance</option>
                        </select>
                    </td>
                    <td>
                        <button type="submit">Update</button>
                    </td>
                </form>

                <!-- Delete Form -->
                <td>
                    <form action="/rooms-update/<%= room.room_id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
